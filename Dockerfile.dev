# Development Dockerfile for log-filter
# Optimized for local development with live code reload
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install build dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files only (leverage layer caching)
COPY requirements.txt requirements-dev.txt pyproject.toml ./

# Install dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-dev.txt

# Create non-root user for development
RUN useradd -m -u 1000 -s /bin/bash logfilter

# Create directories for logs and output
RUN mkdir -p /logs /output && \
    chown -R logfilter:logfilter /logs /output /app

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    LOG_FILTER_WORKERS=4 \
    LOG_FILTER_BUFFER_SIZE=8192

# Switch to non-root user
USER logfilter

# Source code will be mounted as volume for live editing
# No need to copy source code in development mode

# Default command for development
ENTRYPOINT ["python", "-m", "log_filter.cli.main"]
CMD ["--help"]
