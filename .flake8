[flake8]
max-line-length = 100
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache
ignore =
    E203,
    E501,
    W503,
    D107
per-file-ignores =
    __init__.py: F401, D104
    tests/*: D100, D101, D102, D103

# Docstring settings
docstring-convention = google
