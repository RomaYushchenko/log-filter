include README.md
include LICENSE
include CHANGELOG.md
include RELEASE_NOTES.md
include PROJECT_OVERVIEW.md
include PYPI_PUBLISHING.md
include pyproject.toml
include requirements.txt
include requirements-dev.txt
include *.template
include .editorconfig
include .flake8
include .pre-commit-config.yaml

recursive-include src *.py
recursive-include src py.typed
recursive-include tests *.py
recursive-include docs *.md *.rst *.py *.bat
include docs/Makefile
recursive-include docs/_static *.gitkeep

include Dockerfile.dev
include docker-compose.dev.yml
include docker-compose.local.yml
recursive-include config *.md *.yaml
recursive-include output *.md
recursive-include scripts *.ps1
recursive-include test-logs *.md

exclude .gitignore
exclude .dockerignore
exclude Dockerfile
exclude docker-compose.yml
exclude kubernetes-deployment.yaml

prune .git
prune .github
prune htmlcov
prune docs/_build
prune .pytest_cache
prune .mypy_cache
prune __pycache__
prune *.egg-info
